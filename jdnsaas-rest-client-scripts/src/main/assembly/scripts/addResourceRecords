#!/bin/sh
#
# Add records.

#set -x

default_endpoint=http://localhost:8080/jdnsaas/rest/1.0

url=$default_endpoint/dnsservers/ns.zone.test/zones/zone.test/records

payload='{"records":[{"operation":"ADD","name":"test1","timeToLive":86400,"type":"A","data":{"ipAddress":"172.16.0.201"}}]}'

echo $url

curl -i -s \
-H "Content-Type: application/json" \
-H "Accept: application/json" \
-X POST \
-d $payload \
$url

echo ""
exit 0
