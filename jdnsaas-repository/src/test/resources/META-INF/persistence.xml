<?xml version="1.0" encoding="UTF-8"?>
<persistence
    xmlns="http://java.sun.com/xml/ns/persistence" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence 
                        http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
    version="2.0">
    <persistence-unit name="jdnsaasTest" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>org.lazydog.jdnsaas.spi.repository.model.DNSServerEntity</class>
        <class>org.lazydog.jdnsaas.spi.repository.model.TransactionSignatureAlgorithmEntity</class>
        <class>org.lazydog.jdnsaas.spi.repository.model.TransactionSignatureEntity</class>
        <class>org.lazydog.jdnsaas.spi.repository.model.ZoneEntity</class>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:derby:memory:./target/jdnsaas"/>
            <property name="javax.persistence.jdbc.user" value="jdnsaas"/>
            <property name="javax.persistence.jdbc.password" value="jdnsaas"/>
            <property name="eclipselink.ddl-generation" value="create-tables"/>
            <property name="eclipselink.logging.level.sql" value="WARNING"/>
            <property name="eclipselink.logging.parameters" value="true"/>
            <property name="eclipselink.target-database" value="Derby"/>
        </properties>
    </persistence-unit>
</persistence>
